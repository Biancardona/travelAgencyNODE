extends ./layout/index.pug
block content 
    main.container.mt-5  
        h1(class = "col-auto text-center mt-5") #{pagina}
        include ./layout/testimonials_block.pug              
        .row    
        h2.d-block.w-100.text-center Add your testimonial
        //p=JSON.stringify(errorMessages) => Converting array to string 
        if(errorMessages)
            each error in errorMessages  
                .alert.col.alert-danger.text-center=error.error
        .row.justify-content-center.col
            .col.mt-8
                form(action="/testimonials" method="POST")
                    .form-group
                        label(for="nombre") Name 
                        input#nombre(type="text", placeholder="Name", name="name", class="form-control", value=name)
                    .form-group
                        label(for="email")  Email
                        input#email(type="text", placeholder="Email", name="email", class="form-control", value=email)
                    .form-group
                        label(for="message") Message 
                        textarea#message(placeholder="Message", name="message", class="form-control", rows=3)=message
                    input.btn.btn-success.btn-block(type="submit")  
   
   
