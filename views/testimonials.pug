extends ./layout/index.pug
block content 
    h1(class = "col-auto text-center mt-5") #{pagina}
    main.container.mt-5  
        .row    
        h2.d-block.w-100.text-center Add your testimonial
        .row.justify-content-center.col
            .col.mt-8
                form(action="/testimonials" method="POST")
                    .form-group
                        label(for="nombre") Name 
                        input#nombre(type="text", placeholder="Name", name="name", class="form-control")
                    .form-group
                        label(for="email")  Email
                        input#email(type="text", placeholder="Email", name="email", class="form-control")
                    .form-group
                        label(for="message") Message 
                        textarea#message(placeholder="Message", name="message", class="form-control", rows=3)
                    input.btn.btn-success.btn-block(type="submit")  
   
   
